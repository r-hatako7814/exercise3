<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>

         <td><%= link_to"Show",show_books_path(@book.id) %></td>
         <td><%= link_to"Edit",edit_books_path(params[:id]) %></td>
         <td><%= link_to "Destroy", destroy_books_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>

      <% end %>
    </tbody>
  </table>
</body>

<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
 <div class=field>
   <label for=book_title>Title</label>
 <%= f.text_field:title %>
 </div>
 <div class=field>
   <label for=book_body>Body</label>
 <%= f.text_area:body %>
 </div>
 <div class=action>
 <%= f.submit'create book' %>
 </div>

<% end %>



